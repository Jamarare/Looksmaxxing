@model IEnumerable<Looksmaxxing.Models.Sigmas.SigmaIndexViewModel>

@{
    int rowNumber = 1;
    int currentRow = 1;
    int curreltTile = 1;
    int tilesInRow = 6;
}
    <div>
        <a asp-action="Add" asp-controller="Sigmas" type="submit" class="btn btn-primary">Go on mission to get new Sigma</a>

        <a asp-action="Create" asp-controller="Sigmas" type="submit" class="btn btn-primary">Create new Sigma</a>
    </div>

    <div>
        <svg width="120" height="120">
            <a asp-action="Add" asp-controller="Titans" type="submit" class="gButton1 gButton1-normal">
                <path d="M 0 0 L 120 0 L 120 120 L 60 80 L 0 120 Z fill="#FF0000" />
                <text x="60" y="50" fill="#FFFFFF" text-anchor="middle" alignment-baseline="middle">Go on mission for a new sigma</text>
            @*     dv        https://www.w3schools.com/graphics/tryit.asp?filename=trysvg_path2 *@
        </a>
    </svg>

</div>
    
    

    <div class="h1">Your Sigmas:</div>
    <form method="post">
        <table class="table table-hover">
            <thead>
                <tr>
                    @* Later, once images have been implemented, add image here aswell*@
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Level</th>
                    <th scope="col">Admin Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var sigma in Model)
            {
               <tr>
                   @* Later, once images have been implemented, add image here aswell*@
                   <td>@rowNumber</td>
                   <td>@sigma.SigmaName</td>
                   <td>@sigma.SigmaType</td>
                   <td>@sigma.SigmaLevel</td>
                   <td>
                       <a asp-action="details" asp-controller="sigmas" asp-route-id="@sigma.Id" class="btn btn-info">SigmaDetails</a> <br />
                        <a asp-action="update" asp-controller="sigmas" asp-route-id="@sigma.Id" class="btn btn-info">SigmaConfigure</a> <br />
                        <a asp-action="delete" asp-controller="sigmas" asp-route-id="@sigma.Id" class="btn btn-info">SigmaDelete</a>
                   </td>
                </tr>
                rowNumber++;
            }
        </tbody>
        </table>
    </form>
